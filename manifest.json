{
    "manifest_version": 3,
    "name": "Raeting",
    "description": "cbt for ML",
    "version": "1.1",
    "browser_action": {
        "default_icon": "images/raeting.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "*://*.mercadolibre.cl/*",
        "*://*.mercadolibre.com.co/*",
        "*://*.mercadolibre.com.ar/*",
        "*://*.mercadolivre.com.br/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.pa/*",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.mercadolibre.cl/*",
                "*://*.mercadolibre.com.co/*",
                "*://*.mercadolibre.com.ar/*",
                "*://*.mercadolivre.com.br/*",
                "*://*.mercadolibre.com.mx/*",
                "*://*.mercadolibre.com.pa/*"
            ],
            "all_frames": true,
            "js": [
                "js/content.js"
            ]
        }
    ]
}